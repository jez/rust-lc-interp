use crate::parser::Node;

grammar;

pub Ident: String = <s:r"[a-z]([A-Za-z_'])*"> => s.to_string();

pub Node: Box<Node> = {
    "\\" <param:Ident> r"->" <body:Node> => Box::new(Node::Lam {<>}),
    <Fact>,
}

pub Fact: Box<Node> = {
    <f:Fact> <arg:Atom> => Box::new(Node::App {<>}),
    <Atom>,
}

pub Atom: Box<Node> = {
    "(" <Node> ")",
    <var:Ident> => Box::new(Node::Var {<>}),
}
